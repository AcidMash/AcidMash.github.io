      background-color: #111;
      padding: 10px 0;
    }

    .tab {
      padding: 10px 20px;
      cursor: pointer;
      background-color: #222;
      border: none;
      color: white;
      margin: 0 5px;
      transition: background-color 0.3s ease;
    }

    .tab:hover, .tab.active {
      background-color: #444;
    }

    .tab-content {
      display: none;
      padding: 20px;
      text-align: left;
    }

    .tab-content.active {
      display: block;
    }
  </style>
